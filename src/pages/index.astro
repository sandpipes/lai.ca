---
import Layout from "../layouts/Layout.astro";
import Intro from "../components/Intro.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Alex Lai">
    <main>
        <div class="container">
            <div class="content">
                <Intro></Intro>
            </div>
        </div>
        <!-- <div class="container">
            <div class="content">
                <Projects></Projects>
            </div>
        </div> -->
    </main>
</Layout>

<style>
    main > .container:nth-child(odd) {
        background: var(--primary-bg);
    }

    main > .container:nth-child(even) {
        background: var(--secondary-bg);
    }

    .container {
        width: 100%;
        height: 100%;
    }

    .content {
        margin: auto;
        width: 100%;
        max-width: calc(min(80%, 1200px));
    }

    @media (min-width: 860px)  {
        .content {
            margin: auto;
            min-height: 500px;
            height: 100vh;
            max-height: 100vh;
            /* overflow: hidden; */
        }
    }
</style>
