---
import { Image } from "astro:assets";

import GitHubIcon from "./icons/GitHubIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import MailIcon from "./icons/MailIcon.astro";
import TwitterIcon from "./icons/TwitterIcon.astro";
import portraitPic from "../imgs/DSCF0190.jpg";
import portraitSmallPic from "../imgs/DSCF0190_small.jpg";
---

<div class="intro">
    <div class="container">
        <div class="portrait-mobile">
            <div class="portrait-container">
                <div class="backdrop"></div>
                <Image alt="Portrait" src={portraitSmallPic} />
            </div>
        </div>
        <div class="text">
            <h1>
                <span class="sub">ðŸ‘‹ Hello! My name is</span>
                <span>Alex Lai</span>
            </h1>
            <div class="description">
                <p>I'm a Software Developer who wishes to one day make a game from complete scratch, game engine and all that (also I was on the <a href="https://lp.ca/bfJsj9">news</a>).</p>
                <p>Currently building cool things at <a href="https://www.bostonscientific.com/">Boston Scientific</a>.</p>
                <div class="socials">
                    <a href="https://github.com/sandpipes">
                        <GitHubIcon />
                    </a>
                    <a href="https://www.linkedin.com/in/lai-alex/">
                        <LinkedInIcon />
                    </a>
                    <a href="https://twitter.com/sandpipes">
                        <TwitterIcon />
                    </a>
                    <a href="mailto:alex@lai.sh">
                        <MailIcon />
                    </a>
                </div>
            </div>
        </div>
        <div class="portrait">
            <div class="portrait-container">
                <div class="backdrop"></div>
                <!-- <img alt="Portrait" src="https://avatars.githubusercontent.com/u/17598972?v=4"> -->
                <Image alt="Portrait" src={portraitPic} />
            </div>
        </div>
    </div>
</div>

<style>
    .intro {
        margin-top: min(25%, 4rem);
        margin-bottom: min(25%, 4rem);
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        font-size: 1.3rem;
        align-items: stretch;

        --portrait-size: 16rem;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1em;
    }

    .head {
        display: flex;
        margin-bottom: 0.5em;
        align-items: center;
        gap: 3%;
    }

    h1 {
        flex: 0 1 auto;
        font-size: 2.5em;
        font-weight: bolder;
        text-align: left;
        display: flex;
        align-items: center;
        flex-direction: column;
        gap: 1rem;
    }

    h1 .sub {
        font-size: 0.4em;
        color: var(--tertiary-accent);
    }

    .title {
        font-size: 1rem;
    }

    .description > * {
        font-size: 0.9em;
        margin: 1em 0;
        line-height: 1.2;
    }

    .description .socials {
        margin-bottom: 0;
        display: flex;
        gap: 0.4em;
        justify-content: center;
    }

    .socials a {
        display: flex;
        padding: 0.3em;
    }

    .portrait-mobile {
        display: block;
        flex: 0 1 auto;
        width: min(12rem, 50%);
    }

    .portrait {
        display: none;

        margin-left: auto;
    }

    .portrait-container {
        border: 3px solid var(--primary-accent);
        border-radius: 50%;
        overflow: hidden;
        width: 100%;
        aspect-ratio: 1 / 1;
        position: relative;
    }

    .portrait-container img {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .portrait-container .backdrop {
        transform: translate(6%, 4%);
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        position: absolute;
        border: 0.3rem solid var(--primary-accent);
        width: 100%;
        height: 100%;
    }

    @media (min-width: 860px)  {
        .intro {
            margin-top: unset;
            margin-bottom: unset;
            align-items: unset;
        }

        .container {
            flex-direction: row;
            gap: 10%;
        }

        h1 {
            align-items: flex-start;
        }

        .portrait {
            display: block;
        }

        .portrait-container {
            height: unset;
            border: none;
            border-radius: unset;
            overflow: visible;
            aspect-ratio: 1155 / 1627;
            width: var(--portrait-size);
        }

        .portrait-mobile {
            flex: 0;
            display: none;
        }

        .description .socials {
            justify-content: flex-start;
        }
    }


</style>
